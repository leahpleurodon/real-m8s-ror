<% if logged_in? %>
    <small>logged in as:</small>
    <p><%= current_user.first_name %> </p>
    <%= form_tag "/session", method: "delete", :authenticity_token => true do %>
        <button>logout</button>
    <% end %>
<% else %>
    <%= form_tag "/session", method: "post", :authenticity_token => true do %>
        <input type="email" name="email">
        <input type="password" name="password">
        <button>login</button>
    <% end %>
<% end %>